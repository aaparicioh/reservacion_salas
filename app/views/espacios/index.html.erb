<p id="notice"><%= notice %></p>
<% if can? :manage, Espacio %>

<%= render 'welcome/administracion', welcome: @welcome %>

<div class="contenedor">
  <h1 align="center">Espacios</h1>
   <div align="right"><h4><%= link_to 'Nuevo espacio', new_espacio_path %></h4></div>
   <div class="panel panel-primary">
    <table class="table table-striped table-hover">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ubicación</th>
      <th>Aforo</th>
      <th>Descripción</th>
      <th>Servicios adicionales</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @espacios.each do |espacio| %>
      <tr>
        <td><%= espacio.nombre %></td>
        <td><%= espacio.ubicacion %></td>
        <td><%= espacio.aforo %></td>
        <td><%= espacio.descripcion %></td>
        <td><%= espacio.servicios_adicionales %></td>
        <td><%= espacio.estatus %></td>
        <td><%= link_to 'Mostrar', espacio %></td>
        <td><%= link_to 'Editar', edit_espacio_path(espacio) %></td>
        <td><%= link_to 'Eliminar', espacio, method: :delete, data: { confirm: '¿Desea continuar?' } %></td>
       
      </tr>
    <% end %> 
  </tbody>
</table>
<br>
</div>
<div align="right">
<%= button_to 'Ver todos los espacios', calendario_espacios_path, :method => :post %>
<%= button_to 'Sala de Videoconferencias', calendario_salaVideoconferencia_path, :method => :post %>
</div>

</div>
<% end %>

<% if cannot? :manage, @espacio  %>
<div class= "contenedor">
    <div class="panel panel-default">
        <div class="panel-heading">Programación de actividades </div>
            <div class="panel-body"> 
                <center>
                  <div> No tienes acceso a esta página.</div>
                 <a class="btn btn-primary btn-large">
                 <%= button_to 'Regresar', calendario_actividadesInvestigacion_path, :method => :get %>
                 </a>
                 </center>
          
            </div>
        </div>      
</div>
<% end %>