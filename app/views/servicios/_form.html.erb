<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  

<%= form_with(model: servicio, local: true) do |form| %>
  <% if servicio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(servicio.errors.count, "error") %> prohibited this servicio from being saved:</h2>

      <ul>
      <% servicio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<button type="button" class="btn btn-primary btn-sm" id="myBtn">Crear reservación</button>
  <div class="modal fade" id="Servicios" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">SERVICIOS ADICIONALES</h4>
        </div>
        <div class="modal-body">
           <h6> Seleccione los servicios que requiera. </h6>
           <h5><b> REQUERIMIENTOS </b></h5>
            <div><%= form.check_box :cartel, id: :servicios_cartel %> <h7> Cartel</h7></div>
            <div><%= form.check_box :programa, id: :servicios_programa %> <h7> Programa </h7> </div>
            <div><%= form.check_box :constancias, id: :servicios_constancias %><h7> Constancias </h7> </div> 
           <h6> DISPOSICIÓN DEL AUDITORIO </h6>
           
            <%= form.radio_button :disposicion, 'mesaRedonda' %> <h7> Mesa redonda </h7>
            <%= form.radio_button :disposicion, 'auditorio' %> <h7> Auditorio </h7>
            
           <h5><b> SERVICIOS TÉCNICOS </b></h5>
            <div><%= form.check_box :videoproyector, id: :servicios_videoproyector %><h7> Videoproyector </h7> </div> 
            <div><%= form.check_box :pc, id: :servicios_pc %> <h7> PC </h7> </div>
            <div><%= form.check_box :video, id: :servicios_video %><h7> Video </h7> </div> 
            <div><%= form.check_box :conexInternet, id: :servicios_conexInternet %><h7> Conexión Internet </h7> </div>
            <div><%= form.check_box :pizarron, id: :servicios_pizarron %> <h7> Pizarrón </h7> </div> 
            <div><%= form.check_box :traducSimultanea, id: :servicios_traducSimultanea %> <h7> Traducción Simultánea </h7> </div>
            <div><%= form.check_box :conexSkype, id: :servicios_conexSkype %> <h7> Conexión por Skype </h7> </div> 
            <div><%= form.check_box :videoconferencia, id: :servicios_videoconferencia %><h7> Videoproyector </h7> </div>
            <div><%= form.check_box :webcast, id: :servicios_webcast %> <h7> Webcast </h7> </div>
            <div><%= form.check_box :grabVideo, id: :servicios_grabVideo %> <h7> Grabación de video </h7> </div>
            <div><%= form.check_box :grabAudio, id: :servicios_grabAudio %> <h7> Grabación de audio </h7> </div>
           <h5><b> OTROS SERVICIOS </b></h5>
           <h6> En todas las sesiones se puede ofrecer café. </h6>
            <div><%= form.check_box :cafe, id: :servicios_cafe %> <h7> Café </h7> </div>
           <h6> En sesiones de 3 horas o más se puede ofrecer galletas o fruta. </h6>
            <div><%= form.check_box :galletas, id: :servicios_galletas %> <h7> Galletas </h7> </div>
            <div><%= form.check_box :fruta, id: :servicios_fruta %> <h7> Fruta </h7> </div>
            <div><h7> Asistencia aproximada: </h7> <input type="number" name="servicios_asistentes" min="0" max="99"><h7> personas</h7> </div>
            <p></p>
            <div class="actions">
            <a class="btn btn-primary btn-sm">
            <%= form.submit :Crear_reservación %> </a> 
            </div>

        </div>   
      </div>   
    </div>
  </div>


<script>
$(document).ready(function(){
    $("#myBtn").click(function(){
        $("#Servicios").modal();
    });
});
</script>
      
  <% end %>

