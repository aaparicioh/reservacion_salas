<div class="contenedor">
  <%= form_with(model: agenda, local: true) do |form| %>
    <% if agenda.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(agenda.errors.count, "error") %> prohibited this agenda from being saved:</h2>

        <ul>
        <% agenda.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :fecha %>
      <%= form.date_field :fecha, id: :agenda_fecha, :value => Time.zone.today + 1.day, min: Time.zone.today %>
