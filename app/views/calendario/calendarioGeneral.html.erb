<html>
  <head>
    <meta charset='utf-8' />
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script> 
    <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js'></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.5.1/fullcalendar.min.js"> </script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.6.1/locale/es.js'></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.5.1/fullcalendar.min.css" rel="stylesheet">
  </head>

  <div class= "contenedor">
    <div class="panel-group">
      <center>
    <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading"> <center><h3> RESERVACIONES </h3> </center></div>
          <% $espacioActual=0 %>
          <div class="panel-body">
            <div class="btn-group-vertical" role="group" aria-label="...">
              <center>
                <input type="text" readonly="true" style="background-color:green; color:white;" value="SOLICITUDES CONFIRMADAS" size="25px"></br>
                <input type="text" readonly="true" style="background-color:red; color:white;" value="SOLICITUDES PENDIENTES" size="25px">
              </center>
            </div>
          </div>
        </div>
      </div>
    </center>
    </div>
    <%= javascript_include_tag "cal_global" %>
    <div class="panel-group">
      <div class="col-md-12" >
        <div id="calendarglobal"></div>
        <center>
          <div class="btn-group" role="group" aria-label="...">
            <% if can? :manage, Reservacion %>
            <center>
              <a class="btn btn-primary btn-large"><%= button_to 'Continuar', calendario_espacios_path, :method => :post %> </a>
            </center>
            <% else %>   
              <a class="btn btn-primary btn-large"><%= button_to 'Continuar', calendario_actividadesInvestigacion_path, :method => :get %> </a>
            <% end %> 

          </div>
        </center>
      </div>
    </div>
  </div>
</html>