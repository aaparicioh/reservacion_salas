<!DOCTYPE html>
<html>
 <head>
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.8.3.js"></script>
 </head>
 
<% if can? :show, Reservacion %>
<body>
 <div class= "contenedor">
    <div class="panel-group">
	    <div class="col-md-2" >
	      <div class="panel panel-default">
          <div class="panel-heading">Reservaciones </div>
	        	<div class="panel-body">
             <div class="btn-group-vertical" role="group" aria-label="..."> 
                 
                  <h6> Consultar mi reservación. </h6>
                  <%= form_for :reservacion, url: reservacion_path do |f| %>
                    <div class="thumbnail">
                      <h7>Folio:</h7> 
                  <%= f.number_field :id, name:"id", min: "1", max: "99999", required:"" %>
                  <center><%= f.submit "Consultar" %></center>
                     </div>
                  <% end %>      

             </div>
	          </div>
	      </div>
      </div>

      <div class="row">
        <div class="col-md-4" >
          <div class="panel1 panel-default">
            <ul class="thumbnails">
            <li class="span4">
            <div class="thumbnail">
              <%= image_tag "sala1_5p.jpg", :alt => "Sala uno 5° piso", :title => "Aforo: 16 personas" %>
            <center> 
              <a class="btn btn-primary btn-large">
                 <%= button_to 'Sala uno 5° piso', espacios_sala15P_path, :method => :post %>
             <form>
               <input name="id" type="hidden" value="2">
             </form> </a>
            </center> 
            </div>
            </li>

            <li class="span4">
            <div class="thumbnail">
              <%= image_tag "sala2_5p.jpg", :alt => "Sala dos 5° piso", :title => "Aforo: 16 personas" %>
            <center> 
              <a class="btn btn-primary btn-large">
                <%= button_to 'Sala dos 5° piso', espacios_sala25P_path, :method => :post %>
              <form>
                <input name="id" type="hidden" value="3">
              </form>  </a>
            </center> 
            </div> 
            </li>
            </ul>          
          </div>
        </div>
      
        <div class="col-md-1" >
          <div class="panel1 panel-default">
            <ul class="thumbnails">       
            </ul>          
          </div>
        </div>
     
        <div class="col-md-4" >
          <div class="panel1 panel-default">
            <ul class="thumbnails">
            <li class="span4">
            <div class="thumbnail">
              <%= image_tag "sala6p.jpg", :alt => "Sala del 6° piso", :title => "Aforo: 18 personas" %>
            <center> 
              <a class="btn btn-primary btn-large">
                <%= button_to 'Sala del 6° piso', espacios_sala6P_path, :method => :post %>
              <form>
                <input name="id" type="hidden" value="5">
              </form>  </a>
            </center> 
            </div> 
            </li>

            <li class="span4">
            <div class="thumbnail">
              <%= image_tag "sala_pos.jpg", :alt => "Sala de Posgrado", :title => "Aforo: 16 personas"%>
            <center> 
              <a class="btn btn-primary btn-large">
                <%= button_to 'Sala de Posgrado', espacios_salaPosg_path, :method => :post %>
              <form>
                <input name="id" type="hidden" value="6">
              </form> </a>
            </center> 
            </div>
            </li>
            </ul>          
          </div>
        </div>
        
      </div>
      </div>
    </div>
  </body>
<% end %>

