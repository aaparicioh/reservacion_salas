<% @reservacions = @reservacions.reverse%>
 <% @reservacions.each do |reservacion| %>
  <div class=""container">
    <div class="panel panel-primary">
      <div class="panel-body">
        <div class="col-md-6" >
         <ul class="list-group">
          <li class="list-group-item"> <b>Número de reservación: <%= reservacion.id %></b></li>
          <li class="list-group-item"> Aprobación: <%= reservacion.aprobacion %> </li>
          <li class="list-group-item"> <b>Responsable: <%= reservacion.nresponsable %></b></li>
          <li class="list-group-item"> Evento: <%= reservacion.nevento %> </li>
          <li class="list-group-item">  <b>Fecha de inicio: <%= reservacion.fechainicio %> </b></li>
          <li class="list-group-item"> Fecha de fin: <%= reservacion.fechafin %></li>
          <li class="list-group-item"> <b>Hora de inicio: <%= reservacion.horainicio %> </b></li>
          <li class="list-group-item"> Hora de fin: <%= reservacion.horafin %></li>
          <li class="list-group-item"> <b>Repetición: <%= reservacion.repeticion %></b></li>
          <li class="list-group-item"> ID repeticiones: <%= reservacion.idrepeticiones %></li>
          <li class="list-group-item"> <b>Fecha de solicitud: <%= reservacion.fechasolicitud %></b> </li>
          <li class="list-group-item"> Tipo de actividad: <%= reservacion.tipoactividad %></li>
          <li class="list-group-item"> <b>Disposición: <%= reservacion.disposicion %></b></li>     
          <li class="list-group-item"> Cartel: <%= reservacion.cartel %> </li>
          <li class="list-group-item"> <b>Programa: <%= reservacion.programa %></b></li>
          <li class="list-group-item"> Constancias: <%= reservacion.constancias %></li>
         </ul>
        </div>
        <div class="col-md-6" >
           <ul class="list-group">
          <li class="list-group-item"> <b>Videoproyector: <%= reservacion.videoproyector %> </b></li>
          <li class="list-group-item"> PC: <%= reservacion.pc %></li>
          <li class="list-group-item"> <b>Video: <%= reservacion.video %></b></li>
          <li class="list-group-item"> Conexión a Internet: <%= reservacion.conexInternet%></li>
          <li class="list-group-item"> <b>Pizarrón: <%= reservacion.pizarron %></b></li>
          <li class="list-group-item"> Traducción simultánea: <%= reservacion.traducSimultanea %></li>
          <li class="list-group-item"> <b>Conexión de Skype: <%= reservacion.conexSkype %></b></li>
          <li class="list-group-item"> Videoconferencia: <%= reservacion.videoconferencia %></li>
          <li class="list-group-item"> <b>Webcast: <%= reservacion.webcast %></b></li>
          <li class="list-group-item"> Grabación de video: <%= reservacion.grabVideo %></li>
          <li class="list-group-item"> <b>Grabación de audio: <%= reservacion.grabAudio %></b></li>
          <li class="list-group-item"> Café: <%= reservacion.cafe %></li>
          <li class="list-group-item"> <b>Galletas: <%= reservacion.galletas %> </b></li>
          <li class="list-group-item"> Fruta: <%= reservacion.fruta %></li>
          <li class="list-group-item"> <b>Asistentes: <%= reservacion.asistentes %></b></li>
        </ul>
         </div> 
          <table class="table table-striped table-hover">
          <tbody>
             <tr>
               <td><%= link_to 'Mostrar', reservacion %></td>
               <td><%= link_to 'Editar', edit_reservacion_path(reservacion) %></td>
               <td><%= link_to 'Eliminar', reservacion, method: :delete, data: {confirm: '¿Desea continuar?'} %></td> 
             </tr>
          </tbody>
          </table>
        
      </div>
    </div>
  </div>
<% end %>
</div>

<% end %>
