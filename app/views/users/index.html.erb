 <div align="right"> <h4><%= link_to 'Nuevo usuario', users_new_path %></h4></div>

<% @users.each do |user| %>
  <div class=""container">
    <div class="panel panel-primary">
      <div class="panel-body">
        <ul>
          <li>Usuario: <%= user.email %></li>
          <li>Rol: <%= user.role %></li>
          <li>Número de usuario: <%= user.id %></li>
 
        </ul>
        <table class="table table-striped table-hover">
          <tbody>
             <tr>
               <td><%= link_to 'Editar', edit_user_path(user) %></td>
               <td><%= link_to 'Eliminar', user, method: :delete, data: {confirm: '¿Desea continuar?'} %></td> 
             </tr>
          </tbody>
          </table>
      </div>
    </div>
  </div>
<% end %>
